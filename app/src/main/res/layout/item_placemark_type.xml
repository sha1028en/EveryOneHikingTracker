<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<!--    android:paddingTop="16dp"-->
<!--    android:paddingBottom="16dp"-->
<!--    android:paddingStart="8dp"-->
<!--    android:paddingEnd="8dp">-->

    <LinearLayout
        android:id="@+id/placemark_add_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="서설물 사진 등록"
            android:textColor="@color/textColorSecondary"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/placemark_add_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5m 이내의 근접 사진이 포함되어야 합니다."
            android:textColor="@color/textColorSecondary"
            android:gravity="center"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/placemark_disabled_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#666666"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/placemark_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/background_round_border_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/placemark_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나눔길 입구"
            android:textColor="@color/textColorCardTitle"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/placemark_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/placemark_type_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/placemark_type_title"
            app:switchMinWidth="60dp"
            app:track="@drawable/switch_track_selector" />

        <ImageView
            android:id="@+id/placemark_pic_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:src="@drawable/ic_plus_white_24"
            app:layout_constraintEnd_toStartOf="@+id/placemark_pic1"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@+id/placemark_type_title"
            app:layout_constraintTop_toBottomOf="@+id/placemark_type_title" />


        <ImageView
            android:id="@+id/placemark_pic1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:src="@drawable/ic_plus_white_24"
            app:layout_constraintBottom_toBottomOf="@+id/placemark_add_img"
            app:layout_constraintEnd_toStartOf="@+id/placemark_pic2"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/placemark_add_img"
            app:layout_constraintTop_toTopOf="@+id/placemark_add_img" />

        <ImageView
            android:id="@+id/placemark_pic2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:src="@drawable/ic_plus_white_24"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="@+id/placemark_pic1"
            app:layout_constraintEnd_toEndOf="@+id/placemark_enabled"
            app:layout_constraintStart_toEndOf="@+id/placemark_pic1"
            app:layout_constraintTop_toTopOf="@+id/placemark_pic1" />

        <ImageView
            android:id="@+id/placeamrk_add_more"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_plus_blue_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/placemark_pic2"
            app:layout_constraintTop_toBottomOf="@id/placemark_pic2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

