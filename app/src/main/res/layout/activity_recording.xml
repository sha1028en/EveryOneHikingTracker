                        app:layout_constraintEnd_toStartOf="@id/course_modify_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    </androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:id="@+id/record_course_control_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/course_modify_layout"
                        app:layout_constraintStart_toStartOf="@+id/record_course_list"
                        app:layout_constraintTop_toBottomOf="@id/record_course_list">

                        <Button
                            android:id="@+id/start_record_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="종료"/>

                        <Button
                            android:id="@+id/pause_record_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일시 정지" />

                        <CheckBox
                            android:id="@+id/check_deck_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:checked="true"
                            android:text="데크 바닥"
                            android:textColor="@color/textColorPrimary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/course_modify_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/record_course_control_layout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/record_course_list">

                        <Button
